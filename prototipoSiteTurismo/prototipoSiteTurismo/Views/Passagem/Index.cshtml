<!--Card-->


<div class="container-xxl">
    <div class="row my-5">
        <div class="col"></div>
        <div class="col-sm-12">
            <div class="card ">
                <div class="card-body ">
                    <form action="/Passagem/PesquisarPassagem" method="get">
                        <h5 class="card-title fs-3">PASSAGENS AÉREAS</h5>
                        <div class="row">
                            <div class="col-md-3">
                                <label for="exampleDataList" class="form-label" style="font-size: 13px;">
                                    De onde você está
                                    saindo?
                                </label>
                                <input name="queryCidadeSaida" type="text" class="form-control fst-italic" list="datalistOptions" id="exampleDataList"
                                       placeholder="Busque por aeroporto">
                                <datalist id="datalistOptions">
                                    <option value="São Francisco " />
                                    <option value="New York" />
                                    <option value="Seattle" />
                                    <option value="Los Angeles" />
                                    <option value="Chicago" />
                                </datalist>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label" style="font-size: 13px;">Para onde você vai?</label>
                                <input name="queryCidadeChegada" type="text" class="form-control fst-italic" list="datalistOptions" id="exampleDataList"
                                       placeholder="Busque por aeroporto">
                                <datalist id="datalistOptions">
                                    <option value="San Francisco " />
                                    <option value="New York" />
                                    <option value="Seattle" />
                                    <option value="Los Angeles" />
                                    <option value="Chicago" />
                                </datalist>
                            </div>
                            <div class="col-sm-2">
                                <label class="form-label" style="font-size: 13px;">Escolha as datas</label>
                                <div class="input-group sm-2">
                                    <input name="queryDataSaida" type="text" class="form-control fst-italic" placeholder="Ida">
                                    <span></span>
                                    <input name="queryDataChegada" type="text" class="form-control fst-italic" placeholder="Volta">
                                </div>
                                @if (TempData["erro"] != null)
                                {
                                    <hr />
                                    <div class="alert alert-danger" style="margin-bottom: 0px;">
                                        @TempData["erro"]
                                    </div>
                                }
                            </div>

                            <div class="col-sm-2">
                                <label class="form-label"></label>
                                <div>
                                    <button type="submit" class="btn btn-primary btn-lg" style="border-radius: 10px; font-size: 18px;">BUSCAR VOOS</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>

