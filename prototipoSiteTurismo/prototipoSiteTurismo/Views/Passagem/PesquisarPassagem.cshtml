@model IEnumerable<prototipoSiteTurismo.Entidades.Passagem>

<style>
    body {
        background-color: powderblue;

    }

</style>

<div class="container-fluid" style="padding:0px 80px;">
    <h1>Passagens aéreas disponíveis</h1>
    <p>
        <button class="btn btn-primary">ok </button>
        <a asp-controller="Passagem" asp-action="Index">Retornar</a>
        <a asp-action="CriarPassagem">Cadastrar nova passagem</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CidadeSaida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CidadeChegada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataSaida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataChegada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Detalhes)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CidadeSaida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CidadeChegada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataSaida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataChegada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detalhes)
                    </td>
                    <td>
                        <a asp-controller="Carrinho" asp-action="Index" asp-route-id="@item.Id">Adicionar ao carrinho</a> |
                        @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

