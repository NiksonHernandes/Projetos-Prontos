@model prototipoSiteTurismo.Entidades.Passagem

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid" style="padding: 0px 80px">
    <h1>Remover do carrinho</h1>

    <h3>Você quer mesmo remover esse item do seu carrinho?</h3>
    <div>
        <h4>Passagem</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CidadeSaida)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CidadeSaida)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CidadeChegada)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CidadeChegada)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataSaida)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataSaida)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataChegada)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataChegada)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Detalhes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Detalhes)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            <a asp-action="Index">Retornar</a>
        </form>
    </div>

</div>
