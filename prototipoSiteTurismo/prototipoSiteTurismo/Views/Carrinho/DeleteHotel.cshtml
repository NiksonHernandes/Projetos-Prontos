@model prototipoSiteTurismo.Entidades.Hoteis

@{
    ViewData["Title"] = "DeleteHotel";
}

<div class="container-fluid" style="padding: 0px 80px;">
    <h1>Remover do carrinho</h1>

    <h3>Você quer mesmo remover esse item do seu carrinho?</h3>
    <div>
        <h4>Hoteis</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataSaida)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataSaida)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataChegada)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataChegada)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Detalhes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Detalhes)
            </dd>
        </dl>

        <form asp-action="DeleteHotel">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-danger" /> |
            <a asp-action="Index">Retornar</a>
        </form>
    </div>

</div>
